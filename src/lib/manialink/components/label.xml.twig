<label
  pos="{{ pos.x }} {{ pos.y }}"
  z-index="{{ zIndex }}"
  scale="{{ scale }}"
  rot="{{ rot }}"
  hidden="{{ hidden ? 1 : 0 }}"
  id="{{ id }}"
  class="{{ class }}"
  size="{{ size.width }} {{ size.height }}"
  halign="{{ hAlign }}"
  valign="{{ vAlign }}"
  scriptevents="{{ scriptEvents ? 1 : 0 }}"
  opacity="{{ opacity ? 1 : 0 }}"
  action="{{ action }}"
  url="{{ url }}"
  manialink="{{ manialink }}"
  scriptaction="{{ scriptAction }}"
  style="{{ style }}"
  textfont="{{ textFont }}"
  textsize="{{ textSize }}"
  textcolor="{{ textColor }}"
  focusareacolor1="{{ focusAreaColor1 }}"
  focusareacolor2="{{ focusAreaColor2 }}"
  text="{{ text }}"
  textprefix="{{ textPrefix }}"
  textemboss="{{ textEmboss ? 1 : 0 }}"
  autonewline="{{ autoNewLine ? 1 : 0 }}"
  linespacing="{{ lineSpacing }}"
  maxline="{{ maxLine }}"
  translate="{{ translate ? 1 : 0 }}"
  textid="{{ textId }}"
  appendellipsis="{{ appendEllipsis ? 1 : 0 }}"
  italicslope="{{ italicSlope }}"
/>