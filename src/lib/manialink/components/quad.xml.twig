<quad
  pos="{{ pos.x }} {{ pos.y }}"
  z-index="{{ zIndex }}"
  scale="{{ scale }}"
  rot="{{ rot }}"
  hidden="{{ hidden ? 1 : 0 }}"
  id="{{ id }}"
  class="{{ class }}"
  size="{{ size.width }} {{ size.height }}"
  halign="{{ hAlign }}"
  valign="{{ vAlign }}"
  opacity="{{ opacity ? 1 : 0 }}"
  scriptevents="{{ scriptEvents ? 1 : 0 }}"
  action="{{ action }}"
  url="{{ url }}"
  manialink="{{ manialink }}"
  scriptaction="{{ scriptAction }}"
  image="{{ image }}"
  imagefocus="{{ imageFocus }}"
  alphamask="{{ alphaMask }}"
  bgcolor="{{ bgColor }}"
  bgcolorfocus="{{ bgColorFocus }}"
  bluramount="{{ blurAmount }}"
  blendmode="{{ blend }}"
  style="{{ style }}"
  substyle="{{ subStyle }}"
  styleselected="{{ styleSelected ? 1 : 0 }}"
  colorize="{{ colorize }}"
  modulatecolor="{{ modulateColor }}"
  autoscale="{{ autoScale ? 1 : 0 }}"
  keepratio="{{ keepRatio }}"
  autoscalefixedwidth="{{ autoScaleFixedWidth ? 1 : 0 }}"
  pincorners="{{ pinCorners }}"
/>