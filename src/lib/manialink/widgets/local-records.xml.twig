{% extends "../widget.xml.twig" %}

{% block content %}
  <frame pos="0 0">
    <quad pos="0 0" size="{{ size.width }} {{ size.height }}" bgcolor="000" />
    <quad pos="0 0" size="{{ size.width }} 4" bgcolor="0C6" />
    <label
      text="{{ title.text }}"
      size="{{ size.width }} 4"
      halign="center"
      valign="center"
      textsize="2"
      pos="{{ size.width / 2 }} -1.5"
      textfont="{{ title.font }}"
    />
    {% for rec in records %}
      <frame pos="0 -{{ loop.index * (4 + record.padding.top + record.padding.bottom) }}">
        <label
          text="{{ rec.position }}"
          size="{{ record.position.width }} {{ 4 - record.padding.top - record.padding.bottom }}"
          pos="2.5 -{{ (4 - record.padding.top - record.padding.bottom) / 2 + 0.25 }}"
          textfont="{{ record.position.font }}"
          valign="center"
          halign="center"
          textsize="1.5"
          textcolor="{{ record.position.color }}"
        />

        <label
          text="{{ rec.player }}"
          size="{{ size.width - 10 - record.player.padding.left - record.player.padding.right - record.position.width }} {{ 4 + record.player.padding.top + record.player.padding.bottom }}"
          pos="{{ record.position.width + record.player.padding.left }} -{{ (4 + record.player.padding.top + record.player.padding.bottom) / 2 }}"
          textfont="{{ record.player.font }}"
          valign="center"
          textsize="1.5"
          textcolor="{{ record.player.color }}"
        />
        <label
          text="12.123"
          size="{{ 10 - record.time.padding.left - record.time.padding.right }} {{ 4 - record.time.padding.top - record.time.padding.bottom }}"
          pos="{{ size.width - 10 - record.time.padding.left }} -{{ (4 - record.time.padding.top - record.time.padding.bottom) / 2 }}"
          valign="center"
          textfont="{{ record.time.font }}"
          textcolor="{{ record.time.color }}"
          textsize="1.5"
        />

        {% if record.border.bottom %}
          <quad
            pos="0 -{{ 4 + record.padding.top + record.padding.bottom }}"
            size="{{ size.width }} {{ record.border.bottom }}"
            bgcolor="{{ record.border.color }}"
          />
        {% endif %}
      </frame>
    {% endfor %}
  </frame>
{% endblock %}